<%- include('partials/header') -%>

<div class="container">
<div class="row">
	<% for(var i=0; i < items.length; i++) { %>
		<div class="col-sm-4">
			<div class="thumbnail">
			   <img src="<%= items[i].imagePath %> " class="img-responsive" alt="...">
			  <div class="caption">
				<h3><%= items[i].itemname %></h3>
				<p class="description"><%= items[i].description %></p>
				<div class="clearfix">
					  <div class="price pull-left"><%= items[i].price %>$</div>
					  <a href="/view/<%= items[i]._id %> " class="btn btn-success pull-right" role="button">View Item</a>
				</div>
			  </div>
			</div>
		</div>
	 <% } %>
</div>
<!--Pagination -->
<% if (pages > 0) { %>
	<ul class="pagination text-center">
		<% if (current == 1) { %>
			<li class="disabled"><a>First</a></li>
		<% } else { %>
			<li><a href="/item/?page=<%=Number(1)%>">First</a></li>
		<% } %>
		<% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
		<% if (i !== 1) { %>
			<li class="disabled"><a>...</a></li>
		<% } %>
		<% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
			<% if (i == current) { %>
				<li class="active"><a><%= i %></a></li>
			<% } else { %>
				<li><a href="/item/?page=<%= Number(i) %>"><%= i %></a></li>
			<% } %>
			<% if (i == Number(current) + 4 && i < pages) { %>
				<li class="disabled"><a>...</a></li>
			<% } %>
		<% } %>
		<% if (current == pages) { %>
			<li class="disabled"><a>Last</a></li>
		<% } else { %>
			<li><a href="/item/?page=<%= Number(pages) %>">Last</a></li>
		<% } %>
	</ul>
<% } %>
</div>
<%- include('partials/footer') -%>