<%- include('partials/header') -%>

<div class="container">
<div class="row">
	<% for(var i=0; i < items.length; i++) { %>
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
			   <img src="<%= items[i].imagePath %> " class="img-responsive" alt="...">
			  <div class="caption">
				<h3><%= items[i].itemname %></h3>
				<p class="description"><%= items[i].description %></p>
				<div class="clearfix">
					  <div class="price pull-left"><%= items[i].price %>$</div>
					  <a href="/view/<%= items[i]._id %> " class="btn btn-success pull-right" role="button">View Item</a>
				</div>
			  </div>
			</div>
		</div>
	 <% } %>
</div>
</div>
<%- include('partials/footer') -%>